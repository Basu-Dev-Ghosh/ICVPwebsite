  </div>

  <!-- Email input -->
  <div class="form-outline mb-4">
    <input type="text" required id="form4Example2" class="form-control" name="authorname"/>
    <label class="form-label" for="form4Example2">Author Name</label>
  </div>

  <!-- Message input -->
  <div class="form-outline mb-4">
    <input type="text" required id="form4Example2" class="form-control" name="sub" />
    <label class="form-label" for="form4Example2">Subject</label>
  </div>

  <!-- Submit button -->
  <button type="submit" class="btn btn-primary btn-block mb-4">Add</button>
</form>
    </div>


<html lang="en">
{{>headers}}
<body>
    {{>adminnavbar}}
    <h1 class="trade-header" id="trade-header">Add Book</h1>
     <hr>
    <div class="root-container card-container normal" id="root-container">
     <form action="/addbook" class="addbookform" method="POST">
  <!-- Name input -->
  <div class="form-outline mb-4">
    <input type="text" required id="form4Example1" class="form-control" name="bookname" />

<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <!-- Font Awesome -->
    <link
      href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css"
      rel="stylesheet"
    />
    <!-- Google Fonts -->
    <link
      href="https://fonts.googleapis.com/css?family=Roboto:300,400,500,700&display=swap"
      rel="stylesheet"
    />
    <!-- MDB -->
    <link
      href="https://cdnjs.cloudflare.com/ajax/libs/mdb-ui-kit/4.0.0/mdb.min.css"
      rel="stylesheet"
    />
    <link rel="stylesheet" href="./css/style.css" />
    <title>ICVP Official Website</title>
  </head>
  <body>
   {{>loginNavbar}}
    <!-- MDB -->
    <div class="root-container">
      <div class="text mt-5">
        <h1 class="mb-5">login to <span>ICVP</span></h1>
        <form action="/login" class="form-container" method="POST">
          <!-- Name input -->
          <div class="form-outline mb-4">
            <input type="email" id="form4Example1" class="form-control" name="email" />
            <label class="form-label" for="form4Example1">Email id</label>
          </div>
          <div class="form-outline mb-4">
            <input type="password" id="form4Example4" class="form-control" name="password"/>
            <label class="form-label" for="form4Example4">Password</label>
          </div>
          <button
            type="submit"
            class="btn btn-primary mb-4 btn-submit"
          >Login</button>
        </form>
      </div>
      <div class="img mte-5">
        <img src="./img/img3.jpg" alt="" />
      </div>
    </div>
    <script
      type="text/javascript"
      src="https://cdnjs.cloudflare.com/ajax/libs/mdb-ui-kit/4.0.0/mdb.min.js"
    ></script>
  </body>
</html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <!-- Font Awesome -->
    <link
      href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css"
      rel="stylesheet"
    />
    <!-- Google Fonts -->
    <link
      href="https://fonts.googleapis.com/css?family=Roboto:300,400,500,700&display=swap"
      rel="stylesheet"
    />
    <!-- MDB -->
    <link
      href="https://cdnjs.cloudflare.com/ajax/libs/mdb-ui-kit/4.0.0/mdb.min.css"
      rel="stylesheet"
    />
    <link rel="stylesheet" href="./css/style.css" />
    <title>ICVP Official Website</title>
  </head>
  <body>
    {{>signupNavbar}}
    <!-- MDB -->
    <div class="root-container">
      <div class="text mt-5">
        <h1 class="mb-5">signup to <span>ICVP</span></h1>
        <form action="/signup" class="form-container" method="POST">
          <!-- Name input -->
          <div class="form-outline mb-4">
            <input type="text" id="form4Example1" class="form-control" name="name"/>
            <label class="form-label" for="form4Example1">Name</label>
          </div>

          <!-- Email input -->
          <div class="form-outline mb-4">
            <input type="email" id="form4Example2" class="form-control" name="email"/>
            <label class="form-label" for="form4Example2">Email</label>
          </div>
          <div class="form-outline mb-4">
            <input type="number" id="form4Example3" class="form-control" name="phone"/>
            <label class="form-label" for="form4Example3">Phone no</label>
          </div>
          <div class="form-outline mb-4">
            <input type="text" id="form4Example4" class="form-control" name="department"/>
            <label class="form-label" for="form4Example4">Department</label>
          </div>
          <div class="form-outline mb-4">
            <input type="text" id="form4Example5" class="form-control" name="sem"/>
            <label class="form-label" for="form4Example5">Semester</label>
          </div>
          <div class="form-outline mb-4">
            <input type="text" id="form4Example6" class="form-control" name="social_link"/>
            <label class="form-label" for="form4Example6">Social Media Link</label>
          </div>
          <div class="form-outline mb-4">
            <input type="password" id="form4Example7" class="form-control" name="password"/>
            <label class="form-label" for="form4Example7">Password</label>
          </div>
          <div class="form-outline mb-4">
            <input type="password" id="form4Example8" class="form-control" name="cpassword"/>
            <label class="form-label" for="form4Example8">Confirm Password</label>
          </div>

          <!-- Submit button -->
          <button
            type="submit"
            class="btn btn-primary mb-4 btn-submit"
          >Sign Up</button>
        </form>
      </div>
      <div class="img mte-5">
        <img src="./img/img2.jpg" alt="" />
      </div>
    </div>
    <script
      type="text/javascript"
      src="https://cdnjs.cloudflare.com/ajax/libs/mdb-ui-kit/4.0.0/mdb.min.js"
    ></script>
  </body>
</html>